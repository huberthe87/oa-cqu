<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundjunlv" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="消息内容" 
        android:gravity="center"
        android:textColor = "#FFFFFF"
        android:textSize="17sp"
        android:background ="#2F4F4F" />

    <ImageButton
        android:id="@+id/jieshouxiaoxifanhui"
       android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/shebeiweixiushengqing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/topback"
        android:scaleType="fitXY" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="420dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/xiaoxihuazhi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="256dp"
        android:text="公告内容："
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="136dp"
        android:text="主      题  ："
        android:textSize="18sp" />
    

    <TextView
        android:id="@+id/jieshouxiaoxifasongren"
        android:layout_width="166dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="138dp"
        android:layout_marginTop="176dp"
        android:hint="胖子"
        android:gravity="center"
        android:textSize="18sp" />
    
        <TextView
        android:id="@+id/jieshouxiaoxineirong"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="316dp"
        android:text="今天集体去东十三楼吃饭玩耍，费用全部公司报销"
        android:textSize="16sp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
             android:layout_marginLeft="60dp"
             android:layout_marginTop="176dp"
             android:text="发  送  人："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/jieshouxiaoxifasongshijian"
            android:layout_width="166dp"
            android:layout_height="20dp"
           android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
            android:layout_marginLeft="138dp"
            android:layout_marginTop="216dp"
            android:gravity="center"
            android:hint="2016-2-33"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
             android:layout_marginLeft="60dp"
             android:layout_marginTop="216dp"
            android:text="发送时间："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/jieshouxiaoxizhuti"
            android:layout_width="166dp"
            android:layout_height="20dp"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
            android:layout_marginLeft="138dp"
             android:layout_marginTop="136dp"
            android:gravity="center"
            android:hint="聚餐"
            android:textSize="18sp" />

</RelativeLayout>