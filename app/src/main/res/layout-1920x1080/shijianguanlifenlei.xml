<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/background" >

    <TextView
        android:id="@+id/weixiushijianchaxun"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6184B3"
        android:gravity="center"
        android:text="事件查询"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <ImageButton
        android:id="@+id/fanhui"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/weixiushijianchaxun"
        android:background="@drawable/topback"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/gerenshijianguanli"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="135dp"
        android:background="#FFFFFF"
        android:text="       个人事件管理" />

    <Button
        android:id="@+id/benbumenzongheshijianguanli"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="265dp"
        android:background="#FFFFFF"
        android:text="            本部门发送事件" />
    
        <Button
        android:id="@+id/tabumenzongheshijianguanli"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="396dp"
        android:background="#FFFFFF"
        android:text="            本部门接收事件" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="261dp"
        android:layout_marginTop="133dp"
        android:src="@drawable/gerenshijian" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="260dp"
        android:layout_marginTop="263dp"
        android:src="@drawable/zongheshijian" />

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
                android:layout_marginRight="260dp"
        android:layout_marginTop="396dp"
        android:src="@drawable/zongheshijian" />
    
   

</RelativeLayout>
