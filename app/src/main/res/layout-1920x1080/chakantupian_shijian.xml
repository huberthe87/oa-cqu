<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/backgroundqianlan" >
         <LinearLayout
         android:id="@+id/linearLayout_shijianlist"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical" >    
         
       
         
         <RelativeLayout
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
         >
                 
        <TextView
        android:id="@+id/souye"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6184B2"
        android:gravity="center"
        android:text="图片"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />
        
        </RelativeLayout>
    
       

    </LinearLayout>

         <ImageView
             android:id="@+id/imageView1"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:layout_above="@+id/tupian1"
             android:layout_below="@+id/linearLayout_shijianlist"
             android:layout_centerHorizontal="true"
             android:src="@drawable/backgroundqianlan" />

         <Button
             android:id="@+id/tupian3"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="120dp"
             android:layout_height="50dp"
             android:layout_alignParentRight="true"
             android:layout_below="@+id/imageView1"
             android:background="@drawable/backgroundqianlan"
             android:text="图片3"
             android:textColor="#FFFFFF"
             android:textSize="22sp" />

         <Button
             android:id="@+id/tupian1"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="120dp"
             android:layout_height="50dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             android:background="@drawable/backgroundqianlan"
             android:text="图片1"
             android:textColor="#FFFFFF"
             android:textSize="22sp" />

         <Button
             android:id="@+id/tupian2"
             style="?android:attr/buttonStyleSmall"
             android:layout_width="120dp"
             android:layout_height="50dp"
             android:layout_alignParentBottom="true"
             android:layout_toRightOf="@+id/tupian1"
             android:background="@drawable/backgroundqianlan"
             android:text="图片2"
             android:textColor="#FFFFFF"
             android:textSize="22sp" />

</RelativeLayout>

