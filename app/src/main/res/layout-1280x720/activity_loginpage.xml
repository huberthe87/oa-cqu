<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/denglu"
        android:layout_centerHorizontal="true"
        android:background="#00FFFFFF"
        android:text="@string/cover6"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:src="@drawable/logoryg" />

    <TextView
        android:id="@+id/gaizhu1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="55dp"
        android:layout_marginTop="298dp"
        android:background="@drawable/shape_button"
        android:hint=""
        android:textSize="14sp" />

    <TextView
        android:id="@+id/gaizhu2"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="55dp"
        android:layout_marginTop="358dp"
        android:background="@drawable/shape_button"
        android:hint=""
        android:textSize="14sp" />

    <EditText
        android:id="@+id/yonghuming"
        android:layout_width="196dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="55dp"
        android:layout_marginTop="298dp"
        android:background="@drawable/shape_button"
        android:ems="10"
        android:hint="|  用户名或手机号码"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="246dp"
        android:layout_marginTop="298dp"
        android:src="@drawable/user_icon" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="246dp"
        android:layout_marginTop="358dp"
        android:src="@drawable/secret" />

    <EditText
        android:id="@+id/mima"
        android:layout_width="196dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="55dp"
        android:layout_marginTop="358dp"
        android:background="@drawable/shape_button"
        android:ems="10"
        android:hint="  请输入密码"
        android:password="true"
        android:textSize="14sp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/denglu"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="55dp"
        android:layout_marginTop="418dp"
        android:background="@drawable/shape_button2"
        android:gravity="center"
        android:text="@string/cover3" />

        <CheckBox
            android:id="@+id/jizhumima"
            android:layout_width="180dp"
            android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="126dp"
        android:layout_marginTop="396dp"
            android:text="记住密码"
            android:textColor="#FFFFFF"
            android:textSize="14dp" />

</RelativeLayout>