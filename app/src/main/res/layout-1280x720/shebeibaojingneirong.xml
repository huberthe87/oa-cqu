<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundanhong" >

    <TextView
        android:id="@+id/shebeiweixiushengqing"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#984B4B"
        android:gravity="center"
        android:text="故障信息"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

  


    <ImageButton
        android:id="@+id/baojingfanhui"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/shebeiweixiushengqing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/topback"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/shebeilouceng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="228dp"
        android:layout_marginTop="86dp"
        android:textSize="22sp"
        android:textColor = "#FFFFFF"
        android:text="故障楼层  :" />

       <TextView
        android:id="@+id/shiyongnianxian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="228dp"
        android:layout_marginTop="146dp"
        android:textSize="22sp"
        android:textColor = "#FFFFFF"
        android:text="故障地址  :" /> 
        
       <TextView
        android:id="@+id/fuzerenyuan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="228dp"
        android:layout_marginTop="206dp"
        android:textSize="22sp"
        android:textColor = "#FFFFFF"
        android:text="发生时间  :" />

    <TextView
        android:id="@+id/guzhangdizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="86dp"
        android:textSize="22sp"
        android:textColor = "#FFFFFF"
        android:hint="LG小角落" />

       <TextView
        android:id="@+id/guzhangshebei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="146dp"
        android:textSize="22sp"
        android:textColor = "#FFFFFF"
        android:hint="灯泡" /> 
        
       <TextView
        android:id="@+id/fashengshijian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="188dp"
        android:layout_marginTop="206dp"
        android:textSize="22sp"
        android:textColor = "#FFFFFF"
        android:hint="不清楚" />

       <TextView
            android:id="@+id/pizhukuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="228dp"
        android:layout_marginTop="416dp"
        android:textSize="22sp"
        android:textColor = "#FFFFFF"
        android:text="批        注  :" />

       <EditText
           android:id="@+id/pizhu"
           android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="416dp"
        android:background = "#56FFFFFF"
        android:textSize="12sp"
        android:gravity="top"
        android:textColor = "#FFFFFF"    />

       <Button
           android:id="@+id/queren"
           android:layout_width="166dp"
           android:layout_height="40dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="38dp"
           android:background="@drawable/shape_button2"
           android:text="确认"
           android:textSize="18sp" />

       <TextView
           android:id="@+id/TextView01"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="228dp"
        android:layout_marginTop="266dp"
           android:text="故障等级  :"
           android:textColor="#FFFFFF"
           android:textSize="22sp" />

       <TextView
           android:id="@+id/guzhangdengji"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
            android:layout_marginLeft="188dp"
           android:layout_marginTop="266dp"
           android:hint="1level"
           android:textColor="#FFFFFF"
           android:textSize="22sp" />

       <TextView
           android:id="@+id/TextView02"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="228dp"
            android:layout_marginTop="316dp"
           android:text="故障描述  :"
           android:textColor="#FFFFFF"
           android:textSize="22sp" />

       <TextView
           android:id="@+id/guzhangmiaoshu"
           android:layout_width="150dp"
           android:layout_height="50dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
            android:layout_marginLeft="188dp"
           android:layout_marginTop="316dp"
           android:hint="就是坏了"
           android:textColor="#FFFFFF"
           android:textSize="18sp" />
         
</RelativeLayout>
