<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <TextView
        android:id="@+id/shebeiweixiushengqing"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#6184B3"
        android:gravity="center"
        android:text="事件申请"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <Spinner
        android:id="@+id/jingjichengdu"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_alignLeft="@+id/baoxiuren"
        android:layout_below="@+id/baoxiuren"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape_button"
        android:ems="10"
        android:entries="@array/shijianleibie"
        android:gravity="center"
        android:textColor="#CCCCCC" />

    <Spinner
        android:id="@+id/baoxiushijian"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_alignLeft="@+id/jingjichengdu"
        android:layout_below="@+id/jingjichengdu"
        android:layout_marginTop="32dp"
        android:background="@drawable/shape_button"
        android:ems="10"
        android:entries="@array/fasongbumen"
        android:gravity="center"
        android:textColor="#CCCCCC" />

    <EditText
        android:id="@+id/baoxiuren"
        android:layout_width="200dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/shebeiweixiushengqing"
        android:layout_marginRight="25dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape_button"
        android:ems="10"
        android:gravity="center"
        android:hint="输入事件位置"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/fanhui"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/shebeiweixiushengqing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/topback"
        android:scaleType="fitXY" />

    <Button
        android:id="@+id/shenqing"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_button2"
        android:text="申请"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/baoxiuren"
        android:layout_alignBottom="@+id/baoxiuren"
        android:layout_alignLeft="@+id/textView4"
        android:text="事件地址:"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignTop="@+id/jingjichengdu"
        android:text="事件类别:"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/baoxiushijian"
        android:layout_marginLeft="13dp"
        android:text="发送部门:"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView5"
        android:layout_below="@+id/baoxiushijian"
        android:layout_marginTop="27dp"
        android:text="备       注:"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/beizhu"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/baoxiushijian"
        android:layout_alignTop="@+id/textView6"
        android:background="@drawable/shape_button"
        android:ems="10"
        android:gravity="top"
        android:hint=" " />

    <Button
        android:id="@+id/paizhao"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignTop="@+id/shenqing"
        android:background="@drawable/xiangji" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="37dp"
        android:src="#11FFFFFF" />

</RelativeLayout>