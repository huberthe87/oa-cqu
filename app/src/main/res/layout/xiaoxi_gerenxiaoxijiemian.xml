<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundjunlv" >

    <TextView
        android:id="@+id/textview0"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#2F4F4F"
        android:gravity="center"
        android:text="消息内容填写"
        android:textColor="#FFFFFF"
        android:textSize="17sp" />

    <ImageButton
        android:id="@+id/fanhuixiaoxitianxie"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/topback" />
    
        <ImageView
        android:id="@+id/imageView1"
        android:layout_width="420dp"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/xiaoxihuazhi" />
    
     <EditText
         android:id="@+id/gonggaoneirong"
         android:layout_width="200dp"
         android:layout_height="155dp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="90dp"
         android:layout_marginTop="236dp"
         android:background="@drawable/shape_button3"
         android:ems="10"
         android:gravity="top"
         android:hint="公告内容"
         android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="206dp"
        android:text="公告内容："
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="406dp"
        android:text="发送对象："
        android:textSize="18sp"/>

    <ImageButton
        android:id="@+id/queding"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="500dp"
        android:background="@drawable/xiaoxiqueren" />

    <TextView
        android:id="@+id/fasongduixiang"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/shape_button3"
        android:ems="10"
        android:gravity="center"
         android:text = "请选择发送对象"
        android:textColor = "#000000"/>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="136dp"
        android:text="公告主题"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/gonggaozhuti"
        android:layout_width="200dp"
        android:layout_height="26dp"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="90dp"
         android:layout_marginTop="166dp"
        android:background="@drawable/shape_button3"
        android:ems="10"
        android:gravity="center"
        android:hint="公告主题"
        android:textSize="16sp" >

        <requestFocus />
    </EditText>

</RelativeLayout>