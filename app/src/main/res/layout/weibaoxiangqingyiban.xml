           android:id="@+id/weibaowanchen"
           android:layout_width="100dp"
           android:layout_height="30dp"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="36dp"
           android:background = "@drawable/shape_buttonchaxun"
           android:text="维保确认"
           android:textColor = "#ffFFff" />

       <Button
           android:id="@+id/weibaopaizhao"
           style="?android:attr/buttonStyleSmall"
           android:layout_width="36dp"
           android:layout_height="36dp"
           android:layout_alignLeft="@+id/shiyongnianxian"
           android:layout_below="@+id/shiyongbumen"
           android:layout_marginTop="41dp"
           android:background="@drawable/xiangji" />

       <ImageView
           android:id="@+id/imageView1"
           android:layout_width="120dp"
           android:layout_height="180dp"
           android:layout_alignLeft="@+id/weibaozhuangtai"
           android:layout_alignTop="@+id/weibaopaizhao"
           android:src="#11FFFFFF" />
         
</RelativeLayout>
